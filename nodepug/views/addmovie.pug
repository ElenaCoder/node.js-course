doctype html
html
  head
    title Add movie
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  body
    div.d-flex.flex-column.align-items-center.mt-5
        h1 New movie
        form(action='/addmovie', method='POST', class="container mt-4")
            div.form-group
                input.form-control.mb-3(type="text", name="title")
            div.form-group
                input.form-control.mb-3(type="text", name="director")
            div.form-group
                input.form-control.mb-3(type="number", name="year")
            div.text-center
                button.btn.btn-primary(type="submit") Add