doctype html
html
  head
    title Add customer
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  body
    div.d-flex.flex-column.align-items-center.mt-5
        h1 New customer
        form(action='/addcustomer', method='POST', class="container mt-4")
            div.form-group
                label(for="firstname") First name
                input.form-control.mb-3(type="text", name="firstname")
            div.form-group
                label(for="lastname") Last name
                input.form-control.mb-3(type="text", name="lastname")
            div.form-group
                label(for="email") Email
                input.form-control.mb-3(type="email", name="email")
            div.form-group
                label(for="phone") Phone
                input.form-control.mb-3(type="tel", name="phone")
            div.text-center
                button.btn.btn-primary(type="submit") Add